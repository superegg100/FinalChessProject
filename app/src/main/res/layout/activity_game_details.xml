<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_background">

    <TextView
        android:id="@+id/textViewGameInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBlackPlayerIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/blackpawn" />

        <TextView
            android:id="@+id/textViewBlackPlayerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewBlackPlayerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewWhitePlayerIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/whitepawn" />

        <TextView
            android:id="@+id/textViewWhitePlayerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewWhitePlayerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewWinnerPieceColor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/blackking"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewWinnerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textViewWinnerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/imageViewWinnerIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:src="@drawable/star_anim_22" />
        <ImageView
            android:id="@+id/imageViewWinnerIcon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:src="@drawable/star_anim_22" />
        <ImageView
            android:id="@+id/imageViewWinnerIcon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:src="@drawable/star_anim_22" />


    </LinearLayout>

    <TextView
        android:id="@+id/textViewGameDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textViewMoveLogGameInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </ScrollView>

        <Button
            android:id="@+id/buttonReturnToList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return to Game List"
            android:layout_marginTop="340dp"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
</LinearLayout>