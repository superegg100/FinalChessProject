<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    android:padding="16dp"
    tools:context=".ManageTimer">

    <TextView
        android:id="@+id/WelcomeToTimerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Choose Time Controls !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/WhitePickedImageTimer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/whiteknight"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/WhitePiecesTimerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White Player:"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/WhitePiecesTimerInput"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/SetWhiteTimerButton"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="Set !"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/CancelWhiteTimerButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Cancel"
                android:visibility="invisible"
                android:clickable="false"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/BlackPickedImageTimer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/blackknight"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/BlackPiecesTimerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Player:"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/BlackPiecesTimerInput"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/SetBlackTimerButton"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="Set !"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/CancelBlackTimerButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Cancel"
                android:visibility="invisible"
                android:clickable="false"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/TimerStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start !"
        android:textSize="24sp"
        android:padding="12dp" />

    <Button
        android:id="@+id/buttonReturnToWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Welcome Screen"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="160dp"
        android:layout_marginHorizontal="16dp"/>

</LinearLayout>
